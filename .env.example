# === Infrastructure ===
# Timeweb Cloud API token
TF_VAR_timeweb_token=your-timeweb-token-here

# S3 credentials for Terraform backend (Timeweb S3)
AWS_ACCESS_KEY_ID=your-s3-access-key
AWS_SECRET_ACCESS_KEY=your-s3-secret-key

# Optional Terraform vars
TF_VAR_project_id=1115913
TF_VAR_cluster_name=gitops-cluster
TF_VAR_node_count=3

# === Application Secrets ===
# OpenRouter API
OPENROUTER_API_KEY=sk-or-xxx

# GitHub PAT for Argo Image Updater
GITHUB_PAT=github_pat_xxx
GITHUB_USERNAME=justgithubaccount
GITHUB_REPO_URL=https://github.com/justgithubaccount/app-poly-gitops-helm

# PostgreSQL (when ready)
# DATABASE_URL=postgresql://user:pass@host:5432/db
